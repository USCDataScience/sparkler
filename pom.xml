<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <artifactId>sparkler-parent</artifactId>
    <groupId>edu.usc.irds.sparkler</groupId>
    <version>0.1-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.conf.dir>conf</project.conf.dir>
        <project.resources.dir>resources</project.resources.dir>
        <project.bundles.directory>sparkler-app${file.separator}bundles</project.bundles.directory>
        <spark.version>1.6.1</spark.version>
        <scala.version>2.11</scala.version>
        <scala.library.version>${scala.version}.8</scala.library.version>
        <nutch.version>1.11</nutch.version>
        <hibernate-validator.version>5.4.1.Final</hibernate-validator.version>
        <kafka.version>0.10.0.0</kafka.version>
        <hbase.version>1.2.1</hbase.version>
        <solr.version>6.4.0</solr.version>
        <slf4j.version>1.7.25</slf4j.version>
        <osgi.version>6.0.0</osgi.version>
        <felix.version>5.4.0</felix.version>
        <snakeyaml.version>1.18</snakeyaml.version>
        <json.simple.version>1.1.1</json.simple.version>
        <commons.validator.version>1.5.1</commons.validator.version>
        <jbrowserdriver.version>0.16.4</jbrowserdriver.version>

        <!-- Maven Plugins -->
        <maven.bundle.plugin.version>2.5.0</maven.bundle.plugin.version>
        <maven.war.plugin.version>2.1.1</maven.war.plugin.version>
        <maven.clean.plugin.version>2.4.1</maven.clean.plugin.version>

        <!-- Tests -->
        <junit.version>4.12</junit.version>
        <args4j.version>2.0.29</args4j.version>
        <slf4j.version>1.7.12</slf4j.version>
        <tika.version>1.14</tika.version>
    </properties>
    <modules>
        <module>sparkler-api</module>
        <module>sparkler-app</module>
        <module>sparkler-plugins</module>
        <module>sparkler-tests-base</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>${junit.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
